journal = {BMC pediatrics},
keywords = {Caregivers,Child health,Long-term conditions,Medication adherence,Qualitative research,Qualitative synthesis,child health,long-term conditions,medication adherence,qualitative research,qualitative synthesis},
number = {1},
pages = {63},
pmid = {24593304},
publisher = {BMC Pediatrics},
title = {{Treatment non-adherence in pediatric long-term medical conditions: systematic review and synthesis of qualitative studies of caregivers' views.}},
