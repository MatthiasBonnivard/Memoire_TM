doi = {10.1016/j.jadohealth.2004.09.013},
file = {:C$\backslash$:/Users/nicolas.wenk/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Zindani et al. - 2006 - Adherence to treatment in children and adolescent patients with cystic fibrosis(2).pdf:pdf},
